<body class="main">
<div class="login-screen"></div>
    <div class="login-center">
        <div class="container min-height" style="margin-top: 177px;margin-right: 0px;">
          <div class="row">
                <div class="col-xs-4 col-md-offset-8">
                    <div class="login" id="card">
                      <div class="front signin_form"> 
                        <p>SignUp Your Account</p> 
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'login_form'}) do |f| %>
                          <p><%= devise_error_messages! %></p>
                              <div class="form-group">
                                  <div class="input-group">                                   
                                      <%= f.email_field :email, autofocus: true, :class=> "form-control", :placeholder => "Type your email",  autofocus: true %>
                                      <span class="input-group-addon">
                                          <i class="glyphicon glyphicon-user"></i>
                                      </span>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <div class="input-group"> 
                                    <% if @minimum_password_length %> 
                                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                                    <% end %>                        
                                      <%= f.password_field :password, autocomplete: "off", :placeholder => "Type your password", :class => "form-control", autocomplete: "off" %>
                                      <span class="input-group-addon">
                                          <i class="glyphicon glyphicon-lock"></i>
                                      </span>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <div class="input-group">                                   
                                      <%= f.password_field :password_confirmation, autofocus: true, :class=> "form-control", :placeholder => "password_confirmation", autocomplete: "off" %>
                                      <span class="input-group-addon">
                                          <i class="glyphicon glyphicon-user"></i>
                                      </span>
                                  </div>
                              </div>                   
                              
                              <div class="form-group sign-btn">                                
                                  <%= f.submit "Signup", class: "btn"%>
                                  <% end %>
                                  <p><%= render "devise/shared/links" %></p>
                              </div>
                          </form>
                        </div>                       
                    </div>
                </div>
            </div>
        </div>
    </div>    
